<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base Theme -->
    <style name="Base.Theme.Tempo_WT" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Tokens de cor principais -->
        <item name="colorPrimary">@color/brand_purple</item>
        <item name="colorOnPrimary">@color/brand_on_purple</item>

        <item name="colorSecondary">@color/brand_secondary</item>
        <item name="colorOnSecondary">@color/brand_on_secondary</item>

        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorSurfaceVariant">@color/surface_variant</item>

        <!-- Personalizações adicionais -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>

        <!-- Aplique estilos globais -->
        <item name="materialButtonStyle">@style/Widget.TempoWT.Button</item>
        <item name="textInputStyle">@style/Widget.TempoWT.TextInputLayout</item>
    </style>

    <!-- Tema usado pela aplicação -->
    <style name="Theme.Tempo_WT" parent="Base.Theme.Tempo_WT" />

    <!-- ======================== -->
    <!-- Widgets personalizados   -->
    <!-- ======================== -->

    <!-- Botões arredondados globais -->
    <style name="Widget.TempoWT.Button" parent="Widget.Material3.Button">
        <!-- Altura mínima confortável -->
        <item name="android:minHeight">56dp</item>
        <!-- Borda arredondada (pílula) -->
        <item name="cornerRadius">24dp</item>
    </style>

    <!-- TextInputLayout com borda arredondada (Outlined) -->
    <style name="Widget.TempoWT.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
    </style>

</resources>
